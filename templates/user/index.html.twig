{% extends 'base.html.twig' %}
{% import 'macros/modal-delete-list.html.twig' as modalDelete %}
{% import 'macros/modal-note.html.twig' as modalNote %}
{% import 'macros/toast.html.twig' as modalToast %}

{% block title %}Mon profil{% endblock %}

{% block body %}


<!--Message-->
<div class="toast-container position-absolute bottom-0 end-0 p-5">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            {{ modalToast.toast(type, message) }}
        {% endfor %}
    {% endfor %}
</div>

<main class="sk-main">
    <!-- section information -->
    <div class="card border border-success container mt-5">
      <div class="card-body pb-0">
        <div class="row align-items-center">
          <div class="col-md-3">
            <div class="text-center border-end">
              <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="img-fluid avatar w-50 rounded-circle">
              <h5 class="text-muted font-size-13 mb-0">
                  {% for role in user.getroleUser %}
                    <span class="badge badge-primary text-dark">{{ role }}</span>
                  {% endfor %}</h5>
            </div>
          </div>

          <div class="col-md-9">
            <div class="ms-3">
              <div>
                <h4 class="card-title mb-4">Mes informations personnelles</h4>
                  <div class="d-flex">
                    <p class="text-muted me-5">Nom : {{ user.firstNameUser }} </p>
                    <p class="text-muted">Prénom :  {{ user.lastNameUser }} </p>
                  </div>
                  <div class="d-flex">
                    <p class="text-muted me-5">E-mail :  {{ user.email }} </p>
                    <p class="text-muted">Date d'inscription :  {{ user.dateRegisterUser | date('d/m/Y') }} </p>
                  </div>
                  <p class="text-muted"> Profil : {{ user.roleUser.typeRole }} </p>
              </div>
                <div>
                    <a class="btn sk-btn mb-3" href="{{path('app_course_create')}}"><i class="fa-regular fa-pen-to-square fs-3 me-2"></i>Créer un cours</a>
                    <a class='btn sk-btn ms-5 mb-3' href="{{path('app_user_edit', {id: user.id})}}"><i class="fa-solid fa-pen fs-3 me-2"></i>Modifier mes informations</a>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- section teacher  -->
    {% if 'teacher' in app.user.roleUser.typeRole %}

        <div class="container mt-5">
            <h2>Mes cours</h2>
        </div>

        <table class="table table-striped container mt-5">
          <thead>
            <tr>
              <th scope="col">Titre</th>
              <th scope="col">Description</th>
              <th scope="col">Auteur</th>
               <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>

            {% if course is defined and course|length > 0 %}

                {% for c in course %}
                <tr>
                   <td>{{ c.title }}</td>
                   <td>{{ c.description }}</td>
                   <td>{{ c.author.name }}</td>
                    <td>
                        <div class="d-flex">
                            <a href="{{ path('app_course_edit', {id: c.id}) }}" class="btn btn-warning">Modifier</a>
                            <a href="{{ path('app_course_delete', {id: c.id}) }}" class="btn btn-danger ms-2">Supprimer</a>
                        </div>
                    </td>
                </tr>
                {% else %}
                    <tr>
                       <td colspan="4">Pas de cours dans la liste</td>
                    </tr>
                {% endfor %}

            {% endif %}
          </tbody>
        </table>

        {% endif %}


    <!-- section student  -->
      {% if app.user.participateCourses is not empty  %}

          <div class="container mt-5">
              <h2>Cours suivis</h2>
          </div>

        <div class="container">
          <table class="table table-striped mt-5">
            <thead>
              <tr>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Notes</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
            {% for course in app.user.participateCourses %}
              <tr>
                <td><a href="{{ path('app_course_show', {'id': course.id}) }}">{{ course.title }}</a></td>
                <td>{{ course.description }}</td>
                <td>
                  {% for category in course.categories %}
                      {% if category is not empty %}
                        {{ category.name }}
                      {% endif %}
                    {% else %}
                    (Aucune catégorie)
                  {% endfor %}
                </td>
                  <td>
                      {% for note in course.notes %}
                          {% if note.users == app.user %}
                              {{ note.Value }} / 5
                          {% endif %}
                      {% endfor %}
                  </td>
                <td>
                  <div class="d-flex">
                      {{ modalDelete.deleteCouse(course) }}
                      {{ modalNote.note(course) }}
                  </div>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      {% endif %}

   {% if app.user.participateCourses is empty %}
       <div class="container mt-5">
           <h2>Cours suivis</h2>
       </div>

        <div class="container">
            <p class="alert alert-success mt-5">Il n'y a pas de cours dans votre watchlist</p>
        </div>
    {% endif %}

</main>

{% endblock %}