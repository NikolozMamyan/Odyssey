{% extends 'base.html.twig' %}
{% from 'macros/card.macro.twig' import signUpCard %}

{% block body %}


    <!--Message-->
    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="w-50 container-sm mt-5 alert alert-{{ category }}">
                <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!--section Hero-->
    <section class='nm-header'>
        <div class='container'>
            <h1 class="animate__animated animate__backInLeft">Cultivez votre savoir pour un avenir plus brillant.</h1>
            <p>Bienvenue sur notre plateforme d'apprentissage, où vous pouvez acquérir de nouvelles compétences et
                évoluer à votre propre rythme.</p>
            <div class="d-flex flex-column flex-lg-row">
                <a href="{{ path('app_courses') }}" class="nm-Button mb-4 mb-lg-0 me-lg-4">Consulter les cours</a>
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="nm-Button"> Se déconnecter</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="nm-Button">Connexion</a>
                {% endif %}
            </div>
        </div>
    </section>

    <!--section Register-->
    <section class='container mt-5'>
        <div class="row">
            <div class="col12 col-md-6 mb-5">
                {{ signUpCard("Étudiant(e)s", "Rejoignez notre communauté d'apprenant(e)s passionné(e)s.
                Inscrivez-vous maintenant pour des cours de qualité et une expérience interactive.") }}
            </div>

            <div class="col12 col-md-6">
                {{ signUpCard("Formatrice / Formateur", "Partager votre expertise en tant que professionnel(le)
                 sur notre plateforme. Rejoignez-nous aujourd'hui pour inspirer la prochaine génération de talents.") }}
            </div>
        </div>
    </section>

    <!--section Contact-->
    <section class='contact__style'>
        <div class='container mt-5'>
            <div class="row">
                <div class="contact__img w-50 mt-5 d-none d-md-block">
                    <img class="rocket__img mt-5" src={{ asset('images/rocket.jpg') }}>
                </div>
                <div class="col-md-6">
                    <div class="nm-form__container mt-5">
                        <span class="fw-bold fs-3 text">Contactez nous</span>

                        <form id="contactForm" class="me-lg-5" action="{{ path('app_contact') }}" method="post">
                            <div class="form-group mt-5">
                                <label for="name">Nom</label>
                                <input class="nm-input__contact" type="text" id="name" placeholder='Votre nom'
                                       name="name" required>
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input class="nm-input__contact" type="email" id="email" name="email"
                                       placeholder='Votre adresse mail' required>
                            </div>

                            <div class="form-group">
                                <label for="message">Message</label>
                                <textarea class="nm-textarea nm-input__contact" id="message" name="message"
                                          placeholder='Posez vos questions, partagez vos découvertes.' rows="4"
                                          required></textarea>
                            </div>
                            <button type="submit" class="nm-Button d-flex justify-content-center my-5 ms-0 w-100">
                                Envoyer
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
