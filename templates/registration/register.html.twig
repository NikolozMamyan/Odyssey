{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}

    <main class="sk-main container d-flex justify-content-around align-items-center">

        <img class="w-50 d-none d-lg-block" src="{{ asset('images/register-picture.jpg') }}"
             alt="image personnes entrain d'apprendre">

        <section>
            <div class="card px-5 shadow bg-body-tertiary rounded">

                <h1 class="my-3 fs-1 text-center text-decoration-underline">Créer votre compte</h1>

                {{ form_start(registrationForm) }}

                <div class="d-flex flex-column">
                    {{ form_label(registrationForm.firstNameUser, 'Nom', { 'label_attr': {'class': 'form-label m-0'} } ) }}
                    {{ form_widget(registrationForm.firstNameUser, { 'attr': {'class': 'form-control mb-2'} } ) }}
                    {{ form_errors(registrationForm.firstNameUser, { 'attr': {'class': 'danger mt-2'} } ) }}

                    {{ form_label(registrationForm.lastNameUser, 'Prénom', { 'label_attr': {'class': 'form-label m-0'} }) }}
                    {{ form_widget(registrationForm.lastNameUser, { 'attr': {'class': 'form-control mb-2'} } ) }}
                    {{ form_errors(registrationForm.lastNameUser, { 'attr': {'class': 'danger mt-2'} } ) }}

                    {{ form_label(registrationForm.email, 'E-mail', { 'label_attr': {'class': 'form-label m-0'} }) }}
                    {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control mb-2'} } ) }}
                    {{ form_errors(registrationForm.email, { 'attr': {'class': 'danger mt-2'} } ) }}

                    {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', { 'label_attr': {'class': 'form-label m-0'} }) }}
                    {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'form-control mb-2'} } ) }}
                    {{ form_errors(registrationForm.plainPassword.first, { 'attr': {'class': 'danger mt-2'} } ) }}

                    {{ form_label(registrationForm.plainPassword.second, 'Resaisir votre mot de passe', { 'label_attr': {'class': 'form-label m-0'} }) }}
                    {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'form-control mb-2'} } ) }}
                    {{ form_errors(registrationForm.plainPassword.second, { 'attr': {'class': 'danger mt-2'} } ) }}

                    <p class=" sk-password">Doit contenir au moins 8 caractères, dont au moins 1 lettre majuscule<br> et
                        1 chiffre</p>

                </div>

                <div class="d-flex">
                    {{ form_widget(registrationForm.student, { 'attr': {'class': 'form-check-input'} } ) }}
                    {{ form_widget(registrationForm.teacher, { 'attr': {'class': 'form-check-input mx-2'} } ) }}
                </div>

                <div class="d-flex my-3">
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} } ) }}
                    <a href="{{ path('app_legals_page') }}">Conditions d'utilisation</a>
                </div>

                <button type="submit" class="sk-btn w-100 mb-5">S'inscrire</button>

                {{ form_end(registrationForm) }}

            </div>
        </section>
    </main>

    <script src="{{ asset('js/register.js') }}" defer></script>
{% endblock %}
