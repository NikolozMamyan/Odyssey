{% extends 'base.html.twig' %}

{% block body %}
<div class="container-sm">
    <div class="row">
        <div class="col-md-12">
            {% if app.request.method == 'POST' %}
                <div>
                    {% if courses|length == 0 %}

                        <div class="container mt-5 sk-main">
                            <div class="row justify-content-center">
                                <div class="col-12 col-md-8">
                                    <div class="card p-4 text-center shadow">
                                        <div class="card-body">
                                            <p class="fs-1">Aucun résultat pour votre recherche.</p>
                                            <a href="{{ path('app_courses')}}" class="btn sk-btn">Retour à la liste des cours</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% else %}
                        <h2 class="mt-3">Vos résultats de recherche</h2>
                        <a href="{{ path('app_courses')}}" class="btn sk-btn my-3">Retour à la liste des cours</a>
                        
                        <div class="row">
                            {% for course in courses %}
                                <div class="col-md-3 mb-5 mt-3">
                                    <a href="{{ path('app_course_show', {'id': course.id}) }}">
                                        <div class="card mb-6 shadow-sm">
                                            <img src="https://picsum.photos/200" class="card-img-top" alt="course picture">
                                            <div class="d-flex mt-1">
                                                {% for category in course.categories %}
                                                    <span class="badge text-bg-primary mx-2 w-25">{{ category.name }}</span>
                                                {% endfor %}
                                            </div>
                                            <div class="card-body h-100">
                                                <h3 class="card-title">{{ course.title }}</h3>
                                                <h3 class="card-subtitle text-body-secondary">{{ course.getCreatedBy.firstNameUser }}</h3>
                                                <p class="card-text">{{ course.description }}</p>
                                            </div>
                                    </a>
                                            <div class="card-footer d-flex">
                                                {% if app.user %}
                                                    <a href="{{ path('app_course_participate', {'id': course.id}) }}" class="btn sk-btn">Ajouter à ma watchlist</a>
                                                {% endif %}
                                                {% for note in notes %}
                                                    {% if note.averageNote is not null and note.course_id == course.id %}
                                                        <strong class="ms-3 mt-1">&ensp;Note<br>{{ note.averageNote|round(1) }}<span class="mt-1">&ensp;/ 5</span></strong>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}



