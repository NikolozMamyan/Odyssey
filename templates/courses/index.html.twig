{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
{% endblock %}


{% block title %}Courses!
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Les cours d'Odyssey</h1>
		<div class="row">
			<div
				class="col-md-12">{# <a href="{{ path('app_course_make') }}" class="btn btn-primary">Cr√©er un cours</a> #}
			</div>
		</div>

		<div class="row">
			{% for course in courses %}
				<div class="col-md-2">
					<a href="{{ path('app_course_show', {'id': course.id}) }}">
						<div class="card mb-4 shadow-sm">
							<img src="https://picsum.photos/200" class="card-img-top" alt="course picture">

							<div class="card-body">
								<h2 class="card-title">{{ course.title }}</h2>
								<h3 class="card-subtitle text-body-secondary">{{ course.author.name }}</h3>
								<p class="card-text">{{ course.description }}</p>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>

	{% endblock %}
